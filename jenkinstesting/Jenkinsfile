//                     bat "start \"SpringApp\" cmd /c \"java -jar ${jarPath}\""
//                 }
//             }
//         }



    }

    post {
        success {
            echo 'Build and Deployment Successful!'
        }
        failure {
            echo 'Pipeline Failed!'
        }
    }
}
