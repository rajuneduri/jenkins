pipeline {
    agent { label 'windows' }

    environment {
        DEPLOY_DIR = "P:/Jenkinss"
    }

    stages {
       stage('Prepare Deploy Folder') {
                steps {
                    bat 'if not exist P:\\Jenkinss mkdir P:\\Jenkinss'
                     echo "File Created"
                }
            }

        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/rajuneduri/jenkins.git'
                 echo "Successfully Pulled the code"
            }
        }

        stage('Build with Maven') {
            steps {
                   dir('jenkinstesting') {
                       bat 'mvn clean install'
                   }
                   echo "Successfully created jar"
               }
        }

     stage('Copy JAR to Deploy Folder') {
         steps {
             script {
                 // Get list of JAR files
                 def jarFileOutput = bat(script: 'dir /b jenkinstesting\\target\\*.jar', returnStdout: true).trim()
                 def jarFile = jarFileOutput.readLines()[0] // safest way to get the first JAR name
                 echo "Copying ${jarFile} to ${env.DEPLOY_DIR}"

                 // Now perform the actual copy using correct path
                 bat "copy /Y \"jenkinstesting\\target\\${jarFile}\" \"${env.DEPLOY_DIR}\\\""
             }
         }
     }



        stage('Run Application') {
            steps {
                script {
                    def jarFile = bat(script: "for /f %%i in ('dir /b target\\*.jar') do @echo %%i", returnStdout: true).trim()
                    bat "start java -jar ${env.DEPLOY_DIR}\\${jarFile}"
                }
            }
        }
    }

    post {
        success {
            echo 'Build and Deployment Successful!'
        }
        failure {
            echo 'Pipeline Failed!'
        }
    }
}
